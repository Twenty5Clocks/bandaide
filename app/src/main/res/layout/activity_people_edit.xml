<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".song_add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_people_firstName"
        android:id="@+id/tv_edit_peopleFirstName"
        android:layout_above="@+id/et_edit_peopleLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/et_edit_peopleFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:width="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_people_lastName"
        android:id="@+id/tv_edit_peopleLastName"
        android:layout_alignBottom="@+id/et_edit_peopleLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_edit_peopleLastName"
        android:layout_below="@+id/et_edit_peopleFirstName"
        android:layout_alignLeft="@+id/et_edit_peopleFirstName"
        android:layout_alignStart="@+id/et_edit_peopleFirstName"
        android:width="230dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_edit_peopleTitle"
        android:layout_below="@+id/et_edit_peopleLastName"
        android:layout_alignLeft="@+id/et_edit_peopleLastName"
        android:layout_alignStart="@+id/et_edit_peopleLastName"
        android:width="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_people_title"
        android:id="@+id/tv_edit_peopleTitle"
        android:layout_alignBottom="@+id/et_edit_peopleTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_menu"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick_mainMenu_songEdit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_submit"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick_button_submit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_people_phone"
        android:id="@+id/tv_edit_peoplePhone"
        android:layout_above="@+id/et_edit_peopleEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_people_email"
        android:id="@+id/tv_edit_peopleEmail"
        android:layout_alignBottom="@+id/et_edit_peopleEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_edit_peoplePhone"
        android:layout_below="@+id/et_edit_peopleTitle"
        android:layout_alignLeft="@+id/et_edit_peopleTitle"
        android:layout_alignStart="@+id/et_edit_peopleTitle"
        android:width="230dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_edit_peopleEmail"
        android:layout_below="@+id/et_edit_peoplePhone"
        android:layout_alignLeft="@+id/et_edit_peoplePhone"
        android:layout_alignStart="@+id/et_edit_peoplePhone"
        android:width="230dp"/>

</RelativeLayout>
