<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".song_add">


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_main_menu"
    android:id="@+id/button"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:onClick="onClick_mainMenu"/>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_songname"
    android:id="@+id/tv_song_view_name"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_artist"
    android:id="@+id/tv_song_view_artist"
    android:layout_below="@+id/tv_song_view_name"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_tempo"
    android:id="@+id/tv_song_view_tempo"
    android:layout_below="@+id/tv_song_view_artist"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_genre"
    android:id="@+id/tv_song_view_genre"
    android:layout_below="@+id/tv_song_view_tempo"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_year"
    android:id="@+id/tv_song_view_year"
    android:layout_below="@+id/tv_song_view_genre"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_notes"
    android:id="@+id/tv_song_view_notes"
    android:layout_below="@+id/tv_song_view_key_view"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_length"
    android:id="@+id/tv_song_view_length"
    android:layout_below="@+id/tv_song_view_year"
    android:layout_alignRight="@+id/tv_song_view_tempo"
    android:layout_alignEnd="@+id/tv_song_view_tempo"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_timeSignature"
    android:id="@+id/tv_song_view_timeSig"
    android:layout_below="@+id/tv_song_view_length"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/txt_key"
    android:id="@+id/tv_song_view_key"
    android:layout_below="@+id/tv_song_view_timeSig"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Title"
    android:id="@+id/tv_song_view_title_view"
    android:layout_alignTop="@+id/tv_song_view_name"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Artist"
    android:id="@+id/tv_song_view_artist_view"
    android:layout_below="@+id/tv_song_view_title_view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Tempo"
    android:id="@+id/tv_song_view_tempo_view"
    android:layout_below="@+id/tv_song_view_artist_view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Genre"
    android:id="@+id/tv_song_view_genre_view"
    android:layout_below="@+id/tv_song_view_tempo_view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Year"
    android:id="@+id/tv_song_view_year_view"
    android:layout_below="@+id/tv_song_view_genre_view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Notes"
    android:id="@+id/tv_song_view_notes_view"
    android:layout_below="@+id/tv_song_view_notes"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_above="@+id/button"
    android:layout_alignRight="@+id/button4"
    android:layout_alignEnd="@+id/button4"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Length"
    android:id="@+id/tv_song_view_length_view"
    android:layout_below="@+id/tv_song_view_year_view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Time Signature"
    android:id="@+id/tv_song_view_timeSig_view"
    android:layout_below="@+id/tv_song_view_length_view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Key"
    android:id="@+id/tv_song_view_key_view"
    android:layout_below="@+id/tv_song_view_timeSig_view"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_delete"
    android:id="@+id/button4"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/tv_song_view_key_view"
    android:layout_alignEnd="@+id/tv_song_view_key_view"
    android:onClick="onClick_delete"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_edit"
    android:id="@+id/button5"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:onClick="onClick_edit"/>

</RelativeLayout>