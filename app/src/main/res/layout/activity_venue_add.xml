<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".song_add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_venue_name"
        android:id="@+id/tv_venue_add_name"
        android:layout_above="@+id/et_venue_add_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/et_venue_add_name"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:width="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_venue_address"
        android:id="@+id/tv_venue_add_address"
        android:layout_alignBottom="@+id/et_venue_add_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_venue_add_address"
        android:layout_below="@+id/et_venue_add_name"
        android:layout_alignLeft="@+id/et_venue_add_name"
        android:layout_alignStart="@+id/et_venue_add_name"
        android:width="230dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_venue_add_city"
        android:layout_below="@+id/et_venue_add_address"
        android:layout_alignLeft="@+id/et_venue_add_address"
        android:layout_alignStart="@+id/et_venue_add_address"
        android:width="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_venue_city"
        android:id="@+id/tv_venue_add_city"
        android:layout_alignBottom="@+id/et_venue_add_city"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_menu"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick_button_main_menu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_submit"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick_button_submit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_venue_state"
        android:id="@+id/tv_venue_add_state"
        android:layout_above="@+id/et_venue_add_zip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_venue_zip"
        android:id="@+id/tv_venue_add_zip"
        android:layout_alignBottom="@+id/et_venue_add_zip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_venue_add_state"
        android:layout_below="@+id/et_venue_add_city"
        android:layout_alignLeft="@+id/et_venue_add_city"
        android:layout_alignStart="@+id/et_venue_add_city"
        android:width="230dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_venue_add_zip"
        android:layout_below="@+id/et_venue_add_state"
        android:layout_alignLeft="@+id/et_venue_add_state"
        android:layout_alignStart="@+id/et_venue_add_state"
        android:inputType="number"
        android:width="230dp"/>

</RelativeLayout>